@model List<Port>

@{
    ViewData["Title"] = "My Projects";
    int delay = 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />

<style>
    body {
        background-color: crimson;
        font-family: 'Poppins', sans-serif;
    }

    .project-header {
        text-align: center;
        margin: 40px 0 20px;
        color: blanchedalmond;
        font-weight: 600;
    }

    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        padding: 20px;
    }

    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background-color: #fff;
        animation: fadeIn 1s ease forwards;
        opacity: 0;
    }

        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
        }

    .card-img-top {
        height: 180px;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-title {
        color: #0d6efd;
        font-size: 1.2rem;
        font-weight: 600;
    }

    .card-text {
        font-size: 0.95rem;
        color: #444;
    }

    .btn-visit {
        background-color: #0dcaf0;
        border: none;
        padding: 8px 20px;
        font-weight: 500;
        border-radius: 30px;
        transition: 0.3s;
    }

        .btn-visit:hover {
            background-color: #0ba5c1;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<h2 class="project-header">My Projects</h2>

<div class="container">
    <div class="project-grid">
        @foreach (var item in Model)
        {
            <div class="card" style="animation-delay:@($"{delay}s")">
                <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" loading="lazy" />
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text">@item.Description</p>
                    <a href="@item.ProjectLink" class="btn btn-visit" target="_blank">Visit Project</a>
                </div>
            </div>
            delay += 1;
        }
        <div class="mt-4 text-center">
            <a href="/Home/Index" class="btn btn-primary">GO BACK</a>
        </div>
    </div>
   
  
</div>
