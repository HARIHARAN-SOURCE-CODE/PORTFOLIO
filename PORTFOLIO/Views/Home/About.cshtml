@{
    ViewData["Title"] = "About Me";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: crimson;
        color: #fff;
        font-family: 'Poppins', sans-serif;
    }

    .about-container {
        padding: 60px 20px;
        text-align: center;
    }

    .profile-img {
        width: 180px;
        height: 180px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid #0dcaf0;
        box-shadow: 0 0 15px rgba(13, 202, 240, 0.5);
        animation: zoomIn 1s ease;
        margin-bottom: 20px;
    }

    h2 {
        font-size: 2.5rem;
        color: #0dcaf0;
        font-weight: 700;
        margin-bottom: 10px;
    }

    p.lead {
        font-size: 1.1rem;
        color: #ccc;
        max-width: 700px;
        margin: 0 auto 30px auto;
    }

    .skills {
        margin-top: 30px;
    }

    .skill-badge {
        display: inline-block;
        background-color: #0dcaf0;
        color: #000;
        padding: 10px 20px;
        border-radius: 30px;
        margin: 5px;
        font-weight: 500;
        box-shadow: 0 4px 10px rgba(0, 255, 255, 0.2);
        transition: transform 0.3s ease;
    }

        .skill-badge:hover {
            transform: scale(1.05);
            background-color: #0ba5c1;
        }

    .contact-box {
        margin-top: 40px;
        font-size: 1rem;
        color: #bbb;
    }

        .contact-box a {
            color: #0dcaf0;
            text-decoration: none;
        }

    @@keyframes zoomIn {
        from {
            opacity: 0;
            transform: scale(0.8);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

